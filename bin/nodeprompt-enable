# Abort if not an interactive shell.
[[ $- != *i* ]] && return

function NODEPROMPT_PS1() {
	# Check whether current directory still exists (#2).
	if [ -d "$PWD" ]; then
		PS1=$(/Users/oleq/nodeprompt/bin/nodeprompt)
	fi
}

PROMPT_COMMAND=NODEPROMPT_PS1